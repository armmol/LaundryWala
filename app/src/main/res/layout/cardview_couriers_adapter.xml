<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_courier"
        android:layout_width="325dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#97651FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F8F8">

            <TextView
                android:id="@+id/txt_card_courierdistanceToLaundryHouse"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txt_card_couriername"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_card_couriername"
                app:layout_constraintTop_toBottomOf="@+id/txt_card_couriername"
                app:layout_constraintVertical_bias="0.333" />

            <TextView
                android:id="@+id/txt_card_courierdistanceToCustomer"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/txt_card_courierdistanceToLaundryHouse"
                app:layout_constraintEnd_toEndOf="@+id/txt_card_courierOrders"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_card_courierOrders"
                app:layout_constraintTop_toTopOf="@+id/txt_card_courierdistanceToLaundryHouse"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txt_card_couriername"
                android:layout_width="156dp"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.011"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_card_courierOrders"
                android:layout_width="163dp"
                android:layout_height="34dp"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/txt_card_couriername"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.988"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_card_couriername"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>